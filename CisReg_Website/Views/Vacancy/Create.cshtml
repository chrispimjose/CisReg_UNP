@model CisReg_Website.Models.VacancyModel

@{
    ViewData["Title"] = "Create";
}

<div class="flex flex-col p-28 w-full gap-10">
    <h1>Crie uma reserva</h1>

    <h4>Reservas</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AvailableHour" class="control-label"></label>
                    <input asp-for="AvailableHour" class="form-control" />
                    <span asp-validation-for="AvailableHour" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PatientId" class="control-label"></label>
                    <input asp-for="PatientId" class="form-control" />
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfessionalId" class="control-label"></label>
                    <input asp-for="ProfessionalId" class="form-control" />
                    <span asp-validation-for="ProfessionalId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
