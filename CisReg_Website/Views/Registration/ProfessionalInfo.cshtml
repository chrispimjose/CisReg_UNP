@model CisReg_Website.Models.ProfessionalInfoModel
@{
    ViewData["Title"] = "Register";

    var viewFormations = ViewBag.Formations;

    var viewSpecialties = ViewBag.Specialties;
}


<!-- Container flexível para centralização -->
<div id="mainContainer" class="relative flex min-h-screen items-center custom-lg:justify-end justify-center bg-customGrey-light">

    <!-- Primeiro círculo -->
    <div class="fixed custom-lg:w-61-rem custom-lg:h-61-rem custom-lg:left-minus-133-px w-125-rem h-125-rem bg-green-gradient rounded-full aspect-circle top-minus-323-px"></div>

    <!-- UNP Logo -->
    <div class="fixed custom-sm:bottom-50-px custom-sm:left-150-px custom-sm:z-10">
        <img src="~/lib/images/logo-unp.svg" class="scale-200" />
    </div>

    <!-- Segundo círculo -->
    <div class="fixed custom-lg:w-61-rem custom-lg:h-61-rem custom-lg:left-minus-267-px w-125-rem h-125-rem bg-green-gradient rounded-full aspect-circle top-294-px"></div>

    <!-- Background Color Range -->
    <div id="rangeBackground" class="fixed flex w-32 items-center custom-lg:mr-5 custom-lg:bottom-10-px">
        <i id="moonIcon" class="fa-solid fa-moon fa-xl mr-2" style="color: #000000"></i>
        <input id="colorRange" type="range" min="0" max="100" value="100" class="w-full range range-xs" />
        <i id="sunIcon" class="fa-solid fa-sun fa-xl ml-2" style="color: #000000"></i>
    </div>

    <!-- Error Alert -->
    @{
        if (ViewBag.ErrorMessage != null)



        {
            <div class="fixed z-20 top-0 mt-4 w-100-px h-auto">
                <div id="errorAlert" role="alert" class="alert alert-error w-full mx-auto flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         class="h-6 w-6 shrink-0 stroke-current"
                         fill="none"
                         viewBox="0 0 24 24">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>@ViewBag.ErrorMessage</span>
                </div>
            </div>
        }
    }

    <!-- Formulário de Login -->
    <div class="z-10 custom-sm:w-394-px custom-sm:h-auto w-360-px rounded-lg-border bg-customGrey-light shadow-login flex flex-col justify-center items-center custom-lg:mr-36">
        <form method="post" asp-action="Submit" asp-controller="ProfessionalInfo" class="register-personal-info-form p-4" autocomplete="off">

            @Html.AntiForgeryToken()

            <!-- Título "Informações Profissionais" -->
            <div class="relative mb-4">
                <h3 class="text-customGreen-light text-center font-poppins font-bold text-4x1 leading-normal">Informações Profissionais</h3>
            </div>

            <!-- Campo "Número de Registro" -->
            <div class="relative mb-3">
                <label for="registro" class="w-full h-22-px text-customGreen-dark text-left font-poppins font-normal text-base leading-personalized mb-2 block">Número de Registro</label>
                <div class="relative">
                    <input type="text"
                           id="registro"
                           name="registerNumber"
                           asp-for="registrationNumber"
                           class="input input-accent w-full h-40-px bg-white text-customGrey-default font-poppins font-normal text-base leading-4"
                           placeholder="CRM-RN 123456"
                           required 
                           />
                </div>
            </div>

            <!-- Campo "Formação Acadêmica" -->
            <div class="relative mb-3">
                <label for="formacao" class="w-full h-22-px text-customGreen-dark text-left font-poppins font-normal text-base leading-personalized mb-2 block">Formação Acadêmica</label>
                <div class="relative">
                    <select id="formacao"
                            name="academicTraining"
                            asp-for="academicTraining"
                            class="select select-accent w-full !h-40-px !bg-white !text-customGrey-default !font-poppins !font-normal !text-base"
                            required>
                        <option value="" disabled selected>Selecione uma formação</option>
                        @foreach (var formacao in viewFormations)
                        {
                            <option value="@formacao.Name">@formacao.Name</option>
                        }
                    </select>
                </div>
            </div>

            <!-- Campo "Especialidades" -->
            <div class="relative mb-4">
                <label for="especialidade" class="w-full h-22-px text-customGreen-dark text-left font-poppins font-normal text-base leading-personalized mb-2 block">Especialidades</label>
                <div class="relative">
                    <select id="especialidade"
                            name="specialty"
                            asp-for="specialty"
                            class="select select-accent w-full !h-40-px !bg-white !text-customGrey-default !font-poppins !font-normal !text-base"
                            required>
                        <option value="" disabled selected>Selecione uma especialidade</option>
                        @foreach (var especialidade in viewSpecialties)
                        {
                            <option value="@especialidade.Name">@especialidade.Name</option>
                        }

                    </select>
                </div>
            </div>

            <!-- Botão para Finalizar Cadastro (para Finalizar Cadastro) -->
            <div class="relative">
                <button type="submit" class="w-full h-entrar-height-px rounded-lg-border bg-customGreen-default hover:bg-onHoverGreen-on_hover_default text-customGrey-light text-center font-poppins font-normal text-base leading-personalized">Realizar Cadastro</button>
            </div>
        </form>
    </div>
</div>

<script src="~/js/professional-info.js"></script>
<script src="~/js/colorRange.js"></script>