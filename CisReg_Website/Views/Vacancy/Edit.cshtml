@model CisReg_Website.Models.Vacancy.VacancyModel

@{
    ViewData["Title"] = "Edit";
}

<div class="flex flex-col w-full gap-8 p-28">
    <h1>Edit</h1>

    <h4>VacancyModel</h4>
    <hr />
    <form asp-action="Edit" class="flex flex-col gap-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="AvailableHour" class="control-label"></label>
            <input asp-for="AvailableHour" class="form-control input input-md input-bordered" />
            <span asp-validation-for="AvailableHour" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PatientId" class="control-label"></label>
            <input asp-for="PatientId" class="form-control input input-md input-bordered" />
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProfessionalId" class="control-label"></label>
            <input asp-for="ProfessionalId" class="form-control input input-md input-bordered" />
            <span asp-validation-for="ProfessionalId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ReservedById" class="control-label"></label>
            <input asp-for="ReservedById" class="form-control input input-md input-bordered" />
            <span asp-validation-for="ReservedById" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CreatedById" class="control-label"></label>
            <input asp-for="CreatedById" class="form-control input input-md input-bordered" />
            <span asp-validation-for="CreatedById" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status" class="control-label">
                <div class="label">
                    <span class="">Status da reserva</span>
                </div>
                <select asp-for="Status" class="select select-bordered">
                    <option value="Occupied">Ocupado</option>
                    <option value="Canceled">Cancelado</option>
                    <option value="Rescheduled">Reagendado</option>
                </select>
            </label>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
