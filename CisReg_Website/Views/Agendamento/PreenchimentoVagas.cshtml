@{
    ViewData["Title"] = "Preenchimento de Vagas";
}

<!-- Container flexível para centralização -->
<div id="mainContainer" class="flex min-h-screen items-center justify-center bg-customGrey-light">

    <!-- Formulário de Preenchimento de Vagas -->
    <div class="w-full max-w-lg rounded-lg shadow-lg bg-white p-8">
        <form method="post" asp-controller="Agendamento" asp-action="Agendar" class="space-y-6">
            @Html.AntiForgeryToken()

            <!-- Título -->
            <h3 class="text-3xl font-semibold text-center text-customGreen-dark">Preenchimento de Vagas</h3>

            <!-- Campo "Nome do Paciente" -->
            <div>
                <label for="nome" class="block text-lg font-medium text-customGreen-dark">Nome do Paciente</label>
                <input type="text" id="nome" name="Nome" class="input input-bordered w-full mt-2" required placeholder="Digite o nome completo">
            </div>
            
            <!-- Campo "CPF do Paciente" -->
            <div>
                <label for="cpf" class="block text-lg font-medium text-customGreen-dark">CPF do Paciente</label>
                <input type="text" id="cpf" name="Cpf" class="input input-bordered w-full mt-2" required placeholder="Digite o CPF">
            </div>

            <!-- Campo "Telefone do Paciente" -->
            <div>
                <label for="telefone" class="block text-lg font-medium text-customGreen-dark">Telefone do Paciente</label>
                <input type="text" id="telefone" name="Telefone" class="input input-bordered w-full mt-2" required placeholder="Digite o telefone">
            </div>

            <!-- Campo "Unidade de Atendimento" -->
            <div>
                <label for="unidadeAtendimento" class="block text-lg font-medium text-customGreen-dark">Unidade de Atendimento</label>
                <select id="unidadeAtendimento" name="UnidadeAtendimento" class="select select-bordered w-full mt-2" required>
                    <option value="Unp">Universidade Potiguar</option>
                    <option value="OutraUnidade">Outra Unidade</option>
                </select>
            </div>
            
            <!-- Campo "Especialidade Médica" -->
            <div>
                <label for="especialidade" class="block text-lg font-medium text-customGreen-dark">Especialidade Médica</label>
                <select id="especialidade" name="Especialidade" class="select select-bordered w-full mt-2" required>
                    <option value="Cardiologia">Cardiologia</option>
                    <option value="Neurologia">Neurologia</option>
                </select>
            </div>

            <!-- Campo "Data e Horário" -->
            <div>
                <label for="data" class="block text-lg font-medium text-customGreen-dark">Data e Horário</label>
                <input type="date" id="data" name="Data" class="input input-bordered w-full mt-2" required>
                <div class="mt-4 grid grid-cols-3 gap-2">
                    <button type="button" class="btn btn-outline">08:00</button>
                    <button type="button" class="btn btn-outline">09:00</button>
                    <button type="button" class="btn btn-outline">10:00</button>
                </div>
            </div>
            
            <!-- Botão de Agendamento -->
            <button type="submit" class="btn btn-primary w-full mt-6">Agendar</button>
        </form>
    </div>
</div>

<script src="~/js/your-script.js"></script>
